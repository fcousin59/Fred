select `name`, `lastname`, `firstname`, `role`, `team_id`
from team
	inner join wizard on team.id=wizard.id
    inner join player on wizard.id=player.id
order by team_id asc, lastname asc, role asc;

select `firstname`,`lastname`, `role`
from wizard
inner join player on wizard.id=player.id
where `role` like 'seeker';

